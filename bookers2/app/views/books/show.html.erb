<main>
  <p></p>
  <div class='container px-5 px-sm-0'>
   <div class='row'>
    <div class='col-md-3'>
    <%= render 'list', books: @books, user: @user %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to user_path(@user.id) do %>
          <%= image_tag @user.get_profile_image %>
          <% end %></td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <td><% if @user == current_user %>
          <%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-sm btn-success' %>
          <% end %></td>
          <td><% if @user == current_user %>
          <%= link_to 'Destroy', book_path(@book.id), class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: '本当に消しますか？' } %>
          <% end %></td>
        </tr>
      </table>
      <p><%= link_to @user.name, user_path(@user.id) %></p>
    </div>
  </div>
 </div>
</main>